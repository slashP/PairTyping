@{
    ViewBag.Title = "Pair Typing";
}

<div id="typing-area">
    <div class="col-sm-12">

    </div>
    <div class="col-md-12">
        <div class="small-margin-top" data-bind="with: game">
            <div class="text-info well" data-bind="foreach: lines" style="font-family: Consolas">
                <div class="type-line"><span data-bind="visible: indent">&nbsp;&nbsp;&nbsp;&nbsp;</span><span class="text-success type-line" data-bind="text: correct"></span><span class="text-danger type-line" data-bind="text: wrong"></span><span class="type-line remaining" data-bind="text: remaining, attr:{first: remaining()[0]}, css:{'caret-blink':$parent.currentLineNumber() == $index()}"></span><span class="type-line newline" data-bind="visible: $index() < $parent.lines.length - 1, css:{'caret-blink':$parent.currentLineNumber() == $index() && isComplete(), 'text-success':$parent.currentLineNumber() > $index() && isComplete()}" first="&crarr;">&crarr;</span></div>
            </div>
        </div>
        <div class="highscore-registration" data-bind="visible: isGameFinished" id="registration">
            <div class="col-lg-4">
                
                <div class="form-group">
                    <label for="nameInput">Name</label>
                    <input class="form-control" id="nameInput" placeholder="Player 1" data-bind="value: name, valueUpdate:'afterkeydown' ">
                </div>
                <div class="form-group">
                    <label for="phoneInput">Phone</label>
                    <input class="form-control" id="phoneInput" placeholder="Player 1" data-bind="value: phone, valueUpdate:'afterkeydown'">
                </div>
            </div>
            <div class="col-lg-4">

                <div class="form-group">
                    <label for="nameInput2">Name</label>
                    <input class="form-control" id="nameInput2" placeholder="Player 2" data-bind="value: name2, valueUpdate:'afterkeydown'">
                </div>
                <div class="form-group">
                    <label for="phoneInput2">Phone</label>
                    <input class="form-control" id="phoneInput2" placeholder="Player 2" data-bind="value: phone2, valueUpdate:'afterkeydown'">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary " data-bind="click: postScore, enable: canSave">Submit score</button>
                </div>
            </div>

        </div>
    </div>

    

    <!-- Modal -->
    <div  id="highscore" tabindex="-1" role="dialog" aria-labelledby="" aria-hidden="true" data-bind="attr: {'class': 'modal fade '+ (showHighScore() ? 'in':''), 'style': 'display: '+ (showHighScore() ? 'block;': 'none;')}">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h1 class="modal-title">High Score</h1>
                </div>
                <div class="modal-body" style="font-size: 2vw">
                    <table class="table table-striped table-hover table-condensed">
                        <tr>
                            <th>Name</th>
                            <th>Time</th>
                            <th></th>
                        </tr>
                        <!-- ko foreach: highscores -->
                        <tr data-bind="attr: { title: highscoreDisplayPhone }">
                            <td data-bind="text: highscoreDisplayName"></td>
                            <td data-bind="text: time"></td>
                            <td class="text-center">
                                <a data-bind="attr:{href: '/Home/ViewHighscore/' + id}" class="glyphicon glyphicon-play"></a>
                            </td>
                        </tr>
                        <!-- /ko -->
                    </table>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
    <div class="modal fade" id="highscore" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">



    </div>
</div>


<script src="/Scripts/knockout-3.1.0.js"></script>
<script src="/Scripts/Home/custombindings.js"></script>
<script src="/Scripts/Home/stopwatch.js"></script>
<script src="/Scripts/Home/TypingVm.js"></script>
<script src="/Scripts/Home/twoType.js"></script>